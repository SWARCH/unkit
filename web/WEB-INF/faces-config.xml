<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <managed-bean>
        <managed-bean-name>userBean</managed-bean-name>
        <managed-bean-class>presentation.bean.UserBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>      
    </managed-bean>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>employee</from-outcome>
            <to-view-id>/employee.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>manager</from-outcome>
            <to-view-id>/manager.xhtml</to-view-id>            
        </navigation-case>
        <navigation-case>
            <from-outcome>Can't find the user</from-outcome>
            <to-view-id>/registration.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
       <!-- <navigation-case>
            <from-outcome>Can't find the user</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>-->
    </navigation-rule>
</faces-config>
